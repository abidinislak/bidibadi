	<script type="text/javascript">
		$(document).ready(
				function() {
					$(".Link-delete")
							.on(
									"click",
									function(e) {
										e.preventDefault();
										link = $(this);
										userId = link.attr("userId");

										$("#yesbutton").attr("href",
												link.attr("href"));
										$("#confirmText").text(
												"Bukaydısilmeyeemin msisn... "
														+ userId);
										$("#confirmModal").modal();

									});
				});
		
		
		function clearFilter(){
			window.location="/BidiBadiAdmin/users";
		}
		
		
	</script>


